{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "(Node) Launch Sandbox",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run"],
      "program": "sandbox"
    },
    {
      "name": "(Browser) Launch Harambe",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/dist": "${workspaceFolder}/src"
      },
      "breakOnLoad": true,
      "breakOnLoadStrategy": "instrument",
      "trace": true
    }
  ]
}
